<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hsp.channel.SubscribeMapper">
    <resultMap id="subscribeResultMap" type="com.hsp.channel.Subscribe">
    	<result column="USER_ID" property="user_id" />
        <result column="CHANNEL_ID" property="channel_id" />
    </resultMap>

    <sql id="whereSql">
        <where>
        	<if test="user_id != null and user_id != ''">
                AND USER_ID = #{user_id}
            </if>
            <if test="channel_id != null and channel_id != ''">
                AND CHANNEL_ID = #{channel_id}
            </if>
        </where>
    </sql>
    
    <insert id="insert" parameterType="com.hsp.channel.Subscribe">
        INSERT INTO SUBSCRIBE (
            USER_ID,
			CHANNEL_ID
        ) VALUES (
            #{user_id},
            #{channel_id}
        )
    </insert>
    
    <delete id="delete" parameterType="com.hsp.channel.Subscribe">
        DELETE FROM SUBSCRIBE
        <include refid="whereSql" />
    </delete>
    
    <select id="select" parameterType="com.hsp.channel.Subscribe" resultMap="subscribeResultMap">
        SELECT
        	USER_ID,
			CHANNEL_ID
        FROM SUBSCRIBE
        <include refid="whereSql" />
    </select>
    
    <select id="list" resultMap="subscribeResultMap">
        SELECT
			USER_ID,
			CHANNEL_ID
        FROM SUBSCRIBE
        <include refid="whereSql" />
    </select>

</mapper>