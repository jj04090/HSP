<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hsp.order.OrderMapper">
    <resultMap id="orderResultMap" type="com.hsp.order.Order">
        <result column="USER_ID" property="user_id" />
        <result column="PASSWORD" property="password" />
    </resultMap>

    <sql id="whereSql">
        <where>
            <if test="user_id != null and user_id != ''">
                AND USER_ID = #{user_id}
            </if>
            <if test="password != null and password != ''">
                AND PASSWORD = #{password}
            </if>
        </where>
    </sql>

    <select id="select" parameterType="com.hsp.order.Order" resultMap="orderResultMap">
        SELECT
            	USER_ID,
            	PHONE,
            	NAME,
            	PASSWORD,
            	ADDRESS,
            	DETAIL_ADDRESS,
            	ZIP_CODE,
            	BANK_NAME,
            	ACCOUNT_NUMBER,
            	AUTH,
            	REGIT_DATE
        FROM USER
        <include refid="whereSql" />
    </select>

</mapper>